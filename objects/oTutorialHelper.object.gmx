            <string>var selfid = id;

if (text_string != "" &amp;&amp; text_show_count &lt; string_length(text_string)) {
    text_show_count += text_speed;
} else if (text_show_count == string_length(text_string)) {
    text_fade_counter++;
    if (text_fade_counter &gt;= text_fade_begin) {
        textbox_text_alpha -= 1/(text_fade_end - text_fade_begin);
    }
    if (text_fade_counter == text_fade_end) {
        text_string = "";
        alarm[0] = 45;
    }
}

with (shipid) {
    hull = hull_max;
    longsword = longsword_max;
    pelican = pelican_max;
    if (selfid.tutorial_step &lt; 1 &amp;&amp; selected) {
        selfid.tutorial_step = 1;
    }
    if (selfid.tutorial_step &lt; 3 &amp;&amp; x &gt;= 360) {
        selfid.tutorial_step = 3;
        selfid.stationid.side = REBEL;
        selfid.stationid.invulnerable = true;
        selfid.alarm[1] = selfid.fighters_spawn_delay;
    }
}

if (tutorial_step &lt; 2 &amp;&amp; view_xview[PRIMARY_VIEW] &gt;= 360) {
    tutorial_step = 2;
}

var rebel_fighter_count = 0;
with (oUNSC_longsword_GATL1) {
    if (side == REBEL) {
        rebel_fighter_count++;
    }
}
if (tutorial_step &lt; 4 &amp;&amp; fighters_to_spawn == 0 &amp;&amp; rebel_fighter_count == 0) {
    tutorial_step = 4;
}

with (stationid) {
    if (selfid.tutorial_step &lt; 5 &amp;&amp; side == UNSC) {
        selfid.tutorial_step = 5;
    }
}
