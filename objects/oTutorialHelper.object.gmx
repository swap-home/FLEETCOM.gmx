with (stationid) {
    side = NEUTRAL;
    pdt = 0;
    broadsword_max = 0;
    longsword_max = 0;
    pelican_max = 0;
    ship_name = "Remote Station";
    unselectable = true;
    boarding_captures = true;
}

with (oscroll) {
    screen_locked = true;
}

shipid = noone;
