// Switch states

switch(state) {
    case MOVING: 
        // Move to target capital for escort or attack, ignoring everything
        // Change to escort or attack when close enough to target
        // return to escort parent if original target is down
        // intercept current position if parent is also gone
        if (!instance_exists(targetid)) {
            if (instance_exists(parentid)) {
                escort(parentid);
            } else {
                intercept(x,y);
            }
        }
        else if (distance_to_object(targetid) &lt;= sight_range) {
            if (targetid.side == side) {
                state = ESCORT;
            } else {
                state = ATTACK;
            }
        }
        homing_obj(targetid);
        break;
        
    case ATTACK:
        // attack a capital ship in range, ignore singleships
        if (!instance_exists(targetid)) {
            if (instance_exists(parentid)) {
                escort(parentid);
            } else {
                intercept(x,y);
            }
        } else {
            homing_obj(targetid);
        }
        break;

    case INTERCEPT:
        // intercept any enemy ship on route to area
        if (!instance_exists(targetid)) {
                homing_point(target_x, target_y);
        } else {
            homing_obj(targetid);
        }
        break;
        
    case ESCORT:
        // move to allied capital ship, and intercept enemy ships near that
        // return to escort parent if original escort is down
        // intercept current position if parent is also gone
        if (distance_to_object(escortid) &gt; leash_range) {
            escort(escortid);
        } else if (!instance_exists(targetid)) {
            if (instance_exists(escortid)) {
                homing_obj(escortid);
            } else {
                if (instance_exists(parentid)) {
                    escort(parentid);
                } else {
                    intercept(x,y);
                }
            }
        } else {
            homing_obj(targetid);
        }
        break;
}
