                createChild(x,y,oUNSC_50mm, targetdir_l);
            }
        }

        if (withinDegrees(direction, targetdir_l, 5) &amp;&amp; archerpod_cooldown == 0 &amp;&amp; distance_to_object(targetid) &lt;= archerpod_range)
        {
            archerpod_cooldown = archerpod_cooldown_max;
        
            var i;
            for (i = 0; i &lt; archerpod; i+=1)
            {
                var missile = createChild(x,y,oUNSC_ArcherMissile, targetdir_l);
                missile.targetid = targetid;
            }
        }
    }
}

if (pdt_cooldown &gt; 0) {
